&soc {
	tlmm: pinctrl@1000000 {
		acc_int: acc_int {
			mux {
				pins = "gpio42";
				function = "gpio";
			};
			config {
				pins = "gpio42";
				drive-strength = <2>;
				bias-disable;
			};
		};

		prox_int: prox_int {
			mux {
				pins = "gpio43";
				function = "gpio";
			};
			config {
				pins = "gpio43";
				drive-strength = <2>;
				bias-disable;
			};
		};
		grip_int: grip_int {
			mux {
				pins = "gpio86";
				function = "gpio";
			};
			config {
				pins = "gpio86";
				drive-strength = <2>;
				bias-disable;
			};
		};
	};

	i2c@7af5000 {
		status = "okay";
		lsm6dsl@6b {
			compatible = "st,lsm6dsl";
			reg = <0x6b>;
			pinctrl-names = "default";
			pinctrl-0 = <&acc_int>;
			interrupt-parent = <&tlmm>;
			interrupts = <42 0>;
			st,orientation = <1 2 1 0 1 1 1 1 2>;
			st,drdy-int-pin = <1>;
			st,irq_gpio = <&tlmm 42 0x00>;
		};

		yas539@2e {
			compatible = "yas_magnetometer";
			reg = <0x2e>;
			yas,orientation = <6>;
			yas,softiron = <10000 0 0 0 10000 0 0 0 10000>;
			yas,softiron_sign = <2 1 1 1 2 1 1 1 2>;
		};

		cm36657@60 {
			compatible = "cm36657";
			reg = <0x60>;
			pinctrl-names = "default";
			pinctrl-0 = <&prox_int>;
			interrupt-parent = <&tlmm>;
			interrupts = <43 0>;
			cm36657,irq_gpio = <&tlmm 43 0>;
			cm36657,thresh_high = <120>;
			cm36657,thresh_low = <100>;
			cm36657,thresh_detect_high = <4000>;
			cm36657,thresh_detect_low = <600>;
			cm36657,ps_conf1_reg = <0x88a8>;
			cm36657,ps_conf3_reg = <0x0108>;
		};

		a96t3x6@20 {
			compatible = "a96t3x6";
			pinctrl-names = "default";
			pinctrl-0 = <&grip_int>;
			reg = <0x20>;
			interrupt-parent = <&tlmm>;
			interrupts = <86 0>;
			a96t3x6,irq_gpio = <&tlmm 86 0>;
			a96t3x6,ldo_en = <&tlmm 87 0>;
			a96t3x6,fw_path = "abov/a96t326_j8plte.fw";
			a96t3x6,chipid = "A96T326";
			a96t3x6,firmup_cmd = <0x32>;
			a96t3x6,earjack_noise = <1>;
		};
	};
};
